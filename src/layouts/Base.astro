---
const { title } = Astro.props;
const path = Astro.url.pathname;
const linkClass = (href) => (path === href ? "active" : "");
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <link rel="stylesheet" href="/global.css" />
  </head>
  <body>
    <div class="container">
      <header class="nav">
        <div>
          <a href="/" class={linkClass("/")}>Home</a>
          <a href="/film" class={linkClass("/film")}>Film</a>
          <a href="/photo" class={linkClass("/photo")}>Photo</a>
          <a href="/about" class={linkClass("/about")}>About</a>
        </div>
        <div>
          <a href="/admin">Admin</a>
        </div>
      </header>

      <main>
        <slot />
      </main>

      <footer style="border-top:1px solid var(--border); padding: 18px 0; color: var(--muted); font-size:12px;">
        © {new Date().getFullYear()} • Built on Astro + Cloudflare Pages
      </footer>
    </div>
  </body>
</html>
